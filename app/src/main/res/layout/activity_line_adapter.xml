<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    tools:context="pupthesis.chronos.Adapter.LineAdapter">
    <android.support.v7.widget.CardView
        android:id="@+id/cardDays"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/AppbarColor"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:id="@+id/DaysTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text="1Day"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingLeft="10dp"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:id="@+id/cardLinename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/AppbarColor"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/LinenameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:text="Name of Line"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:id="@+id/cardStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/AppbarColor"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/StatusTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/White"
        android:text="Status"/>
</android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
