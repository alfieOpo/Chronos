<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pupthesis.chronos.Activity.LineCharts"
    tools:showIn="@layout/activity_line_charts">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/txt_title"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Main Project Title"

            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="this is where   the description"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_below="@+id/linearLayout"
        android:id="@+id/lineardays">

    </LinearLayout>
<ScrollView

    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:divider="@color/colorAccent"
    android:layout_above="@+id/legendlayout"
    android:layout_below="@+id/lineardays">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">  </LinearLayout>
    </HorizontalScrollView>

</ScrollView>




        <LinearLayout
            android:id="@+id/legendlayout"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>



</RelativeLayout>
