<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pupthesis.chronos.Activity.LineTask"
    tools:showIn="@layout/activity_line_task">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/AppbarColor"

        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/project_nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="LIST OF PROJECTS"
            android:textColor="@color/White" />
    </android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/projectList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:divider="@color/fbutton_color_transparent"
        android:dividerHeight="10.0sp"
        android:layout_alignParentStart="true" />
</LinearLayout>
